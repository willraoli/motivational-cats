---
const res = await fetch(import.meta.env.PUBLIC_QUOTE_API_URL)
const data = await res.json().catch(err => console.log(err))
const quote = data[0]?.q
const author = data[0]?.a
---

<div class='w-1/4 space-y-8'>
  <blockquote class='text-orange-300 text-5xl font-crimsonText'>
    &ldquo;{quote}&rdquo;
  </blockquote>
  <footer class='text-orange-200 font-serif'>&mdash; {author}</footer>
</div>
